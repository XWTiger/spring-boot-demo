<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace" strict="true" name="Log4j2Config">
  <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z} [%p] - %l - %m%n"/> 
        </console>

        <RollingFile name="RollingFileInfo" fileName="${sys:user.home}/logs/mir-service-broker/info.log"
                     filePattern="${sys:user.home}/logs/mir-service-broker/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="INFO"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <!-- <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] - %l - %m%n"/> -->
             <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z} [%p] - %l - %m%n"/> 
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileWarn" fileName="${sys:user.home}/logs/mir-service-broker/warn.log"
                     filePattern="${sys:user.home}/logs/mir-service-broker/$${date:yyyy-MM}/warn-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="WARN"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z} [%p] - %l - %m%n"/> 
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileError" fileName="${sys:user.home}/logs/mir-service-broker/error.log"
                     filePattern="${sys:user.home}/logs/mir-service-broker/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="ERROR"/>
             <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z} [%p] - %l - %m%n"/> 
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

    </appenders>

    <loggers>
        <!--过滤掉spring和hibernate的一些无用的debug信息-->
        <logger name="org.springframework" level="INFO">
        </logger>
        <root level="all">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileInfo"/>
            <appender-ref ref="RollingFileWarn"/>
            <appender-ref ref="RollingFileError"/>
        </root>
    </loggers>
  
</Configuration>